<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_plgwater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palembang \nWater"
        android:textStyle="bold"
        android:textSize="60sp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_airbersih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menyediakan air bersih, sehat dan terjaqa \nkualitasnya"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_plgwater"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        app:cornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_airbersih"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:textColor="#052473"
        app:cornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_signup"/>

    <TextView
        android:id="@+id/tv_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit Us"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_plg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.palembang.go.id"
        android:textColor="#052473"
        app:cornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_visit"/>

</androidx.constraintlayout.widget.ConstraintLayout>